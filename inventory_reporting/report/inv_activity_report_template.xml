<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inv_activity_reports">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <t t-if="data['context']['report_context'] == 'finish_goods'">
                            <h2>Inventory Activity Report - Finished Goods</h2>
                        </t>
                        <t t-if="data['context']['report_context'] == 'activity_component'">
                            <h2>Inventory Activity Report - Components</h2>
                        </t>
                    </div>
                    <t t-foreach="data['inv_data']" t-as="inv">
                        <br/>
                        <b>Item Number - <span t-esc="inv.default_code"/></b>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <t t-if="data['context']['report_context'] == 'finish_goods'">
                                        <th>Manufacturing Order</th>
                                        <th>Sales Order</th>
                                        <th>Sales Order Date</th>
                                    </t>
                                    <t t-if="data['context']['report_context'] == 'activity_component'">
                                        <th>Purchase Order</th>
                                        <th>Manufacturing Order</th>
                                        <th>Purchase Order Date</th>
                                    </t>
                                    <th>Expected Date</th>
                                    <th>Qty In</th>
                                    <th>Qty Out</th>
                                    <th>Available Inventory</th>
                                    <th>Partner</th>
                                </tr>
                            </thead>
                            <tbody class="mrp_sale_tbody">
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <t t-if="inv.qty_available &lt; 0">
                                        <td class="text-right" style="color:red;">(<span t-esc="abs(inv.qty_available)"/>)</td>
                                    </t>
                                    <t t-if="inv.qty_available &gt; 0 or inv.qty_available == 0.0">
                                        <td class="text-right"><span t-esc="inv.qty_available"/></td>
                                    </t>
                                    <td></td>
                                </tr>
                                <t t-foreach="data['inv_data'][inv]" t-as="rec">
                                    <tr>
                                        <t t-if="data['context']['report_context'] == 'finish_goods'">
                                            <td><span t-esc="rec['mo_name']"/></td>
                                            <td><span t-esc="rec['so_name']"/></td>
                                            <td><span t-esc="rec['so_date']"/></td>
                                        </t>
                                        <t t-if="data['context']['report_context'] == 'activity_component'">
                                            <td><span t-esc="rec['po_name']"/></td>
                                            <td><span t-esc="rec['mo_name']"/></td>
                                            <td><span t-esc="rec['po_date']"/></td>
                                        </t>
                                        <td><span t-esc="rec['expected_date']"/></td>
                                        <td class="text-right"><span t-esc="rec['qty_in']"/></td>
                                        <td class="text-right"><span t-esc="rec['qty_out']"/></td>
                                        <t t-if="rec['avail_inv'] &lt; 0">
                                            <td class="text-right" style="color:red;">(<span t-esc="abs(rec['avail_inv'])"/>)</td>
                                        </t>
                                        <t t-if="rec['avail_inv'] &gt; 0 or inv.qty_available == 0.0">
                                            <td class="text-right"><span t-esc="rec['avail_inv']"/></td>
                                        </t>
                                        <td><span t-esc="rec['partner_name']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
