<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_so_history">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="inventory_reporting.activity_layout">
                    <t class="page">
                        <div class="text-center">
                            <h4>Sale Order History Report</h4>
                            <h6>
                                <span t-esc="datetime.datetime.strptime(
                            str(o.date_start),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                                -
                                <t t-if="o.date_end">
                                    <span t-esc="datetime.datetime.strptime(
                            str(o.date_end),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                                </t>
                            </h6>
                        </div>
                        <br/>
                        <t t-set="display_header" t-value="True"/>
                        <t t-foreach="o.get_data()" t-as="so_info">
                            <b>Sale Order Number - </b>
                                <t t-esc="so_info['order'].name"/>
                            <b>PO Number - </b>
                                <t t-esc="so_info['order'].client_order_ref"/>
                            <b>Customer - </b>
                                <t t-esc="so_info['order'].partner_id.name"/>

                            <table class="table table-condensed report_style">
                                <t t-if="display_header">
                                <thead>
                                    <tr>
                                        <th width="10%">Product</th>
                                        <th width="30%">Description</th>
                                        <th width="9%">Req. Date</th>
                                        <th width="8%">Ordered Qty</th>
                                        <th width="8%">Ship Qty</th>
                                        <th width="8%">Onhand Qty</th>
                                        <th width="8%">Open Qty</th>
                                        <th width="7%">Rate</th>
                                        <th width="20%">Total</th>
                                    </tr>
                                </thead>
                                <t t-set="display_header" t-value="False"/>
                                </t>
                                <tbody>
                                    <t t-foreach="so_info['lines']"
                                       t-as="line">
                                        <tr>
                                            <td width="10%">
                                                <span t-esc="line['name'].default_code"/>
                                            </td>
                                            <td width="30%">
                                                <span t-esc="line['description']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['req_date']"/>
                                            </td>
                                            <td width="8%" class="text-right">
                                                <span t-esc="line['order_qty']"/>
                                            </td>
                                            <td width="8%" class="text-right">
                                                <span t-esc="line['ship_qty']"/>
                                            </td>
                                            <td width="8%" class="text-right">
                                                <span t-esc="line['on_hand']"/>
                                            </td>
                                            <td width="8%" class="text-right">
                                                <span t-esc="line['open_qty']"/>
                                            </td>
                                            <td width="7%" class="text-right">
                                                <span t-esc="line['rate']"/>
                                            </td>
                                            <td width="20%" class="text-right">
                                                <span t-esc="line['total']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                    </t>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
