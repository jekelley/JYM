<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inv_stock_by_lot_reports">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h4>Inventory Stock By Lot</h4>
                        <h6>
                            <span t-esc="datetime.datetime.strptime(
                            str(data['form']['date_start']),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                            -
                            <t t-if="data['form']['date_end']">
                                <span t-esc="datetime.datetime.strptime(
                            str(data['form']['date_end']),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                            </t>
                        </h6>
                    </div>
                    <t t-set="display_header" t-value="True"/>
                    <t t-foreach="data['product_data']" t-as="product">
                        <br/>
                        <b><span t-esc="product.name"/> - <span t-esc="product.default_code"/>
                        </b>

                        <table class="table table-condensed report_style">
                            <t t-if="display_header">
                            <thead>
                                <tr>
                                    <th width="10%">Lot</th>
                                    <th width="13%">Quantity</th>
                                    <th width="15%">Manufactured</th>
                                    <th width="10%">Expires</th>
                                    <th width="10%">Months Remaining</th>
                                    <th width="10%">Shelf Life</th>
                                    <th width="10%">Value</th>
                                </tr>
                            </thead>
                            <t t-set="display_header" t-value="False"/>
                            </t>
                            <tbody class="lot_tbody">
                                <t t-foreach="data['product_data'][product]"
                                   t-as="rec">
                                    <tr >
                                        <td width="10%">
                                            <span t-esc="rec['lot_name']"/>
                                        </td>
                                        <td width="13%" class="text-right">
                                            <span t-esc="rec['lot_qty']"/>
                                        </td>
                                        <td width="15%">
                                            <span t-esc="rec['manufacturing_date']"/>
                                        </td>
                                        <td width="10%">
                                            <span t-esc="rec['expire_date']"/>
                                        </td>
                                        <t t-if="rec['month_rem'] &lt; 0">
                                            <td class="text-right"
                                                style="color:red;" width="10%">(<span
                                                    t-esc="rec['month_rem_str']"/>)
                                            </td>
                                        </t>
                                        <t t-if="rec['month_rem'] &gt; 0 or rec['month_rem'] == 0.0">
                                            <td class="text-right" width="10%">
                                                <span t-esc="rec['month_rem_str']"/>
                                            </td>
                                        </t>
                                        <t t-if="rec['shelf_life'] &lt; 0">
                                            <td class="text-right"
                                                style="color:red;" width="10%">(<span
                                                    t-esc="rec['shelf_life_str']"/>)
                                            </td>
                                        </t>
                                        <t t-if="rec['shelf_life'] &gt; 0 or rec['shelf_life'] == 0.0">
                                            <td class="text-right" width="10%">
                                                <span t-esc="rec['shelf_life_str']"/>
                                            </td>
                                        </t>
                                        <td class="text-right" width="10%">
                                            <span t-esc="rec['value']" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
