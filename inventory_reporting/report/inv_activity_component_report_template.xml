<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_component_reports">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h4>Inventory Activity Report - Components</h4>
                        <h6>
                            <span t-esc="datetime.datetime.strptime(
                            str(data['form']['date_start']),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                            -
                            <t t-if="data['form']['date_end']">
                                <span t-esc="datetime.datetime.strptime(
                            str(data['form']['date_end']),
                            '%Y-%m-%d').strftime('%m/%d/%Y')"/>
                            </t>
                        </h6>
                    </div>
                    <t t-set="display_header" t-value="True"/>
                    <t t-foreach="data['inv_data']" t-as="inv">
                        <br/>
                        <b>Item Number -
                            <span t-esc="inv.default_code"/>
                        </b>

                        <table class="table table-condensed report_style">
                            <t t-if="display_header">
                            <thead>
                                <tr>
                                    <th>Purchase Order</th>
                                    <th>Manufacturing Order</th>
                                    <th>Purchase Order Date</th>
                                    <th>Expected Date</th>
                                    <th>Qty In</th>
                                    <th>Qty Out</th>
                                    <th>Available Inventory</th>
                                    <th>Partner</th>
                                </tr>
                            </thead>
                            <t t-set="display_header" t-value="False"/>
                            </t>
                            <tbody class="mrp_sale_tbody">
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <t t-if="inv.qty_available &lt; 0">
                                        <td class="text-right"
                                            style="color:red;">(
                                            <span t-esc="'{0:,.2f}'.format(abs(inv.qty_available))"/>)
                                        </td>
                                    </t>
                                    <t t-if="inv.qty_available &gt; 0 or inv.qty_available == 0.0">
                                        <td class="text-right">
                                            <span t-esc="'{0:,.2f}'.format(abs(inv.qty_available))"/>
                                        </td>
                                    </t>
                                    <td></td>
                                </tr>
                                <t t-foreach="data['inv_data'][inv]"
                                   t-as="rec">
                                    <tr width="100%">
                                        <td width="10%">
                                            <span t-esc="rec['po_name']"/>
                                        </td>
                                        <td width="13%">
                                            <span t-esc="rec['mo_name']"/>
                                        </td>
                                        <td width="10%">
                                            <span t-esc="rec['po_date']"/>
                                        </td>
                                        <td  width="15%">
                                            <span t-esc="rec['expected_date']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="rec['qty_in']"/>
                                        </td>
                                        <td width="10%" class="text-right">
                                            <span t-esc="rec['qty_out']"/>
                                        </td>
                                        <t t-if="rec['avail_inv'] &lt; 0">
                                            <td class="text-right"
                                                style="color:red;" width="10%">(
                                                <span t-esc="rec['avail_inv_str']"/>)
                                            </td>
                                        </t>
                                        <t t-if="rec['avail_inv'] &gt; 0 or rec['avail_inv'] == 0.0">
                                            <td class="text-right" width="10%">
                                                <span t-esc="rec['avail_inv_str']"/>
                                            </td>
                                        </t>
                                        <td width="25%">
                                            <span t-esc="rec['partner_name']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
