<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="activity_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
        </div>

        <div class="article o_report_layout_boxed"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        <div class="footer o_boxed_footer">
        </div>
    </template>

    <template id="report_so_open_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="inventory_reporting.activity_layout">
                    <t class="page">
                        <div class="text-center">
                            <h4>Open Sale Order Report</h4>
                        </div>
                        <t t-set="display_header" t-value="True"/>
                        <t t-foreach="o.get_open_order()" t-as="so_info">
                            <b>Sale Order Number - </b>
                                <t t-esc="so_info['order'].name"/>
                            <b>PO Number - </b>
                                <t t-esc="so_info['order'].client_order_ref"/>
                            <b>Customer - </b>
                                <t t-esc="so_info['order'].partner_id.name"/>

                            <table class="table table-condensed report_style">
                                <t t-if="display_header">
                                <thead>
                                    <tr>
                                        <th width="10%">Product</th>
                                        <th width="25%">Description</th>
                                        <th width="9%">Req. Date</th>
                                        <th width="9%">Ordered Qty</th>
                                        <th width="9%">Ship Qty</th>
                                        <th width="9%">Onhand Qty</th>
                                        <th width="9%">Open Qty</th>
                                        <th width="9%">Rate</th>
                                        <th width="25%">Total</th>
                                    </tr>
                                </thead>
                                <t t-set="display_header" t-value="False"/>
                                </t>
                                <tbody>
                                    <t t-foreach="so_info['lines']"
                                       t-as="line">
                                        <tr>
                                            <td width="10%">
                                                <span t-esc="line['name'].default_code"/>
                                            </td>
                                            <td width="27%">
                                                <span t-esc="line['description']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['req_date']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['order_qty']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['ship_qty']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['on_hand']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['open_qty']"/>
                                            </td>
                                            <td width="9%" class="text-right">
                                                <span t-esc="line['rate']"/>
                                            </td>
                                            <td width="25%" class="text-right">
                                                <span t-esc="line['total']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
