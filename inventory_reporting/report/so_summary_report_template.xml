<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_so_summary">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t class="page">
                        <div class="text-center">
                            <h2>Sale Order Summary Report</h2>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>SO Number</th>
                                    <th>Partner</th>
                                    <th>Order Date</th>
                                    <th>Req. Date</th>
                                    <th>Completed Date</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.get_data()" t-as="so_info">
                                    <t t-foreach="so_info['data']" t-as="data">
                                        <tr>
                                            <td>
                                                <span t-esc="data['so_name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="data['partner']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="data['so_date']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="data['expected_date']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="data['completed_date']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="data['amt']"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr class="text-right">
                                        <td colspan="5">
                                            <b>Total</b>
                                        </td>
                                        <td colspan="6">
                                            <b>
                                                <span t-esc="so_info['total']"/>
                                            </b>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
